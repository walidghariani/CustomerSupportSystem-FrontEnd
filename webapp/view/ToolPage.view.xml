<mvc:View
	controllerName="focus.customersupportsystem.CustomerSupportSystem.controller.ToolPage"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:tnt="sap.tnt"
	height="100%"
	xmlns:f="sap.f">
	<tnt:ToolPage id="toolPage" sideExpanded="false">
		<tnt:header>
			<tnt:ToolHeader>
				<Button
					id="sideNavigationToggleButton"
					icon="sap-icon://menu2"
					type="Transparent"
					press=".onSideNavButtonPress" />
				
				<ToolbarSpacer width="20px" />
				
				<Button text="File" type="Transparent" />
				
				<tnt:ToolHeaderUtilitySeparator />
				
				<ToolbarSpacer>
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow" minWidth="20px" />
					</layoutData>
				</ToolbarSpacer>
				
				<Button icon="sap-icon://bell" type="Transparent" press=".handleNotificationIconPress" />
				<Button icon="sap-icon://account" type="Transparent" press=".onAccountIconPress"/>
				<Button icon="sap-icon://log" type="Transparent" />

			</tnt:ToolHeader>
		</tnt:header>
		
		<tnt:sideContent>
			<tnt:SideNavigation
				expanded="true"
				selectedKey="ticketslist"
				itemSelect=".onItemSelect">
				<tnt:NavigationList>
					
					<tnt:NavigationListItem
						text="{i18n>ticketsListButton}"
						icon="sap-icon://tags"
						key="ticketslist">
					</tnt:NavigationListItem>
					
					<tnt:NavigationListItem
						text="{i18n>addTicketButton}"
						icon="sap-icon://sys-add"
						key="addticket">
						
					</tnt:NavigationListItem>
					
					
				</tnt:NavigationList>
				
				<tnt:fixedItem>
					<tnt:NavigationList>
						<tnt:NavigationListItem text="Settings" icon="sap-icon://action-settings" />
					</tnt:NavigationList>
				</tnt:fixedItem>
				
			</tnt:SideNavigation>
		</tnt:sideContent>
		
		<tnt:mainContents>
			
			<f:FlexibleColumnLayout id="fcl" stateChange="onStateChanged"	layout="{layoutSettingsModel>/layout}" backgroundDesign="Translucent"/>
			
		</tnt:mainContents>
	</tnt:ToolPage>
</mvc:View>