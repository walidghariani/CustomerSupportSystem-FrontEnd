<mvc:View displayBlock="true" controllerName="focus.customersupportsystem.CustomerSupportSystem.controller.SystemDetail" height="100%"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns="sap.f"
		xmlns:m="sap.m"
		xmlns:form="sap.ui.layout.form"
		xmlns:core="sap.ui.core">

	<DynamicPage toggleHeaderOnTitleClick="false">
		<title>
			<DynamicPageTitle>
				<heading>
					<m:FlexBox alignContent="Start" >
						<core:Icon src="sap-icon://customize" class="sapUiTinyMargin" />
						<m:Title text="D99" class="sapUiTinyMargin" wrapping="true"/>
					</m:FlexBox>
				</heading>
				<navigationActions>
					<m:OverflowToolbarButton type="Transparent" icon="sap-icon://full-screen" press="handleFullScreen" visible="{= ${layoutSettingsModel>/actionButtonsInfo/endColumn/fullScreen} !== null }" />
					<m:OverflowToolbarButton type="Transparent" icon="sap-icon://exit-full-screen" press="handleExitFullScreen" tooltip="Exit Full Screen Mode" visible="{= ${layoutSettingsModel>/actionButtonsInfo/endColumn/exitFullScreen} !== null }" />
					<m:OverflowToolbarButton type="Transparent" icon="sap-icon://decline" press="handleClose"  tooltip="Close column" visible="{= ${layoutSettingsModel>/actionButtonsInfo/endColumn/closeColumn} !== null }"/>
				</navigationActions>
			</DynamicPageTitle>
		</title>
		<content>
			<form:SimpleForm editable="false"
							layout="ResponsiveGridLayout"
							adjustLabelSpan="false"
							labelSpanS="12"
							labelSpanM="4"
							labelSpanL="4"
							columnsM="1"
							columnsL="1"
							emptySpanS="0"
							emptySpanM="1"
							emptySpanL="4">
				<form:content>
					<m:Label text="System ID" />
					<m:FlexBox>
						<m:Link text="D99" class="sapUiMediumMarginEnd" />
						<m:Text text="Dev. Solution Manager 7.2" />
					</m:FlexBox>
					
					<m:Label text="System Role" />
					<m:Text text="DEVELOP / OnP" />
					<m:Label text="Product Version" />
					<m:Text text="SAP SOLUTION MANAGER 7.2 / 740" />
					<m:Label text="Installation " />
					<m:FlexBox>
						<m:Text text="0020148952" class="sapUiMediumMarginEnd" />
						<m:Link text="EWA" />
					</m:FlexBox>
					<m:Label text="Operating System" />
					<m:Text text="LINUX_X86_64" />
					<m:Label text="Database" />
					<m:Text text="F99 / 2.00.037.00.15525310" />
					<m:Label text="Data Protection" />
					<m:Text text="" />
				</form:content>
			</form:SimpleForm>
		</content>
	</DynamicPage>
</mvc:View>