<mvc:View
	controllerName="focus.customersupportsystem.CustomerSupportSystem.controller.TicketSummary"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core" 
	xmlns:l="sap.ui.layout"> 
	
<!-- We should use Smart form once we have metadata -->
	<Panel class="sapUxAPObjectPageSubSectionAlignContent" visible="{= ${settingsModel>/editmode} !== true }">
		<form:SimpleForm 
			editable="false"
			layout="ResponsiveGridLayout"
			adjustLabelSpan="false"
			labelSpanS="12"
			labelSpanM="4"
			labelSpanL="4"
			columnsM="1"
			columnsL="3"
			emptySpanS="0"
			emptySpanM="2"
			emptySpanL="0">
			<form:content>
				<core:Title text="{i18n>incidentDetailsSectionTitle}" />
				<Label text="{i18n>incidentIdLabel}"/>
				<Text text="{IncidentId}"/>
				<Label text="{i18n>incidentTypeLabel}"/>
				<Text text="{IncidentType}"/>
				<Label text="{i18n>descriptionLabel}"/>
				<Text text="{Description}"/>
				<Label text="{i18n>statusLabel}"/>
				<ObjectStatus text="{ToStatus/Value}" state="{path:'StatusId', formatter:'.formatter.incidentStatusHighlight'}" class="sapUiMediumMarginEnd"/>
				<Label text="{i18n>priorityLabel}"/>
				<ObjectStatus text="{ToPriority/Value}" state="{path:'PriorityId', formatter:'.formatter.incidentPriorityHighlight'}" class="sapUiMediumMarginEnd"/>
				<Label text="{i18n>componentLabel}"/>
				<Text text="{Component}" class="sapUiMediumMarginEnd"/>
				<Label text="{i18n>processorLabel}"/>
				<Text text="{ToProcessor/Name}" class="sapUiMediumMarginEnd"/>
				<Label text="{i18n>processingLabel}"/>
				<Text text="{ToProcessor/Name}"/>
				<Label text="{i18n>serviceTeamLabel}"/>
				<Text text="{ToProcessor/Name}"/>
				<Label text="{i18n>errorCategory1Label}"/>
				<Text text="{ToErrorCategory1/Value}"/>
				<Label text="{i18n>errorCategory2Label}"/>
				<Text text="{ToErrorCategory2/Value}"/>

				
				<core:Title text="Next Action Monitor (Product Support)" />
				<Label text="Respond to the customer until"/>
				<FlexBox>
					<Text text="19.02.2020" class="sapUiMediumMarginEnd"/>
					<Text text="17:43:52" class="sapUiMediumMarginEnd"/>
				</FlexBox>
				<Label text="Manual date"/>
				<Text text="10:42"/>
				
				<core:Title text="{i18n>datesSectionTitle}" />
				<Label text="{i18n>lastUpdateLabel}"/>
				<Text text="{path: 'LastUpdate' , formatter: '.formatter.dateFormatter'}"/>
				<Label text="IRT"/>
				<Text text="18.02.2020"/>
				<Label text="ORT"/>
				<Text text="Plan Sol. Del."/>
				<Label text="{i18n>creationDateLabel}"/>
				<Text text="{path: 'Created' , formatter: '.formatter.dateFormatter'}"/>
				<Label text="MPT"/>
				<Text text="29.02.2020"/>
				<Label text="Man."/>
				<Text text="" />
				<Label text="Time"/>
				<Text text=""/>
			</form:content>
		</form:SimpleForm>
	</Panel>
	
	<Panel class="sapUxAPObjectPageSubSectionAlignContent" width="auto" visible="{= ${settingsModel>/editmode} === true}">	
		<form:SimpleForm
			editable="true"
			layout="ResponsiveGridLayout"
			adjustLabelSpan="false"
			labelSpanS="12"
			labelSpanM="4"
			labelSpanL="4"
			columnsM="1"
			columnsL="3"
			emptySpanS="0"
			emptySpanM="2"
			emptySpanL="0" >
			<form:content>
				<core:Title text="{i18n>incidentDetailsSectionTitle}" />
				<Label text="{i18n>incidentIdLabel}"/>
				<Text text="{IncidentId}"/>
				<Label text="{i18n>incidentTypeLabel}"/>
				<Text text="{IncidentType}"/>
				<Label text="{i18n>descriptionLabel}"/>
				<Input value="{Description}"/>
				<Label text="{i18n>statusLabel}"/>
				<ComboBox placeholder="Select status" selectedKey="{StatusId}" items="{/StatusSet}">
					<core:ListItem text="{Value}" key="{StatusId}"/>
				</ComboBox>
				<Label text="{i18n>priorityLabel}"/>
				<ComboBox placeholder="Select priority" selectedKey="{PriorityId}" items="{/PrioritySet}">
					<core:ListItem text="{Value}" key="{PriorityId}"/>
				</ComboBox>
				<Label text="{i18n>componentLabel}"/>
				<Text text="{Component}" class="sapUiMediumMarginEnd"/>
				<Label text="{i18n>processorLabel}"/>
				<Input
					type="Text"
					value="{ToProcessor/Name}"
					showValueHelp="true"
					valueHelpOnly="true"
					valueHelpRequest="handleValueHelp"/>
				<Label text="{i18n>processingLabel}"/>
				<Text text="{ToProcessor/Name}"/>
				<Label text="{i18n>serviceTeamLabel}"/>
				<Text text="{ToProcessor/Name}"/>
				
				<Label text="{i18n>errorCategory1Label}"/>
				<ComboBox id="comboboxErrorCategory1" change="errorCategory1Change" items="{}" selectedKey="{ToErrorCategory1/ErrorCategoryId}">
					<core:ListItem id="itemErrorCategory1" text="{Value}" key="{ErrorCategoryId}" />
				</ComboBox>
				<Label text="{i18n>errorCategory2Label}"/>
				<ComboBox id="comboboxErrorCategory2" placeholder="Select an error category" items="{}" selectedKey="{ToErrorCategory2/ErrorCategoryId}">
					<core:ListItem id="itemErrorCategory2" text="{Value}" key="{ErrorCategoryId}"/>
				</ComboBox>
				
				<core:Title text="Next Action Monitor (Product Support)" />
				<Label text="Report to the customer until"/>
				<FlexBox>
					<Text text="19.02.2020" class="sapUiMediumMarginEnd"/>
					<Text text="17:43:52" />
				</FlexBox>
				<Label text="Manual date"/>
				<Text text="10:42"/>
				
				<core:Title text="{i18n>datesSectionTitle}" />
				<Label text="{i18n>lastUpdateLabel}"/>
				<Text text="{path: 'LastUpdate' , formatter: '.formatter.dateFormatter'}"/>
				<Label text="IRT"/>
				<Text text="18.02.2020"/>
				<Label text="ORT"/>
				<Text text="Plan Sol. Del."/>
				<Label text="{i18n>creationDateLabel}"/>
				<Text text="{path: 'Created' , formatter: '.formatter.dateFormatter'}"/>
				<Label text="MPT"/>
				<Text text="29.02.2020"/>
				<Label text="Man."/>
				<Text text="" />
				<Label text="Time"/>
				<Text text=""/>
			</form:content>
		</form:SimpleForm>
	</Panel>
</mvc:View>