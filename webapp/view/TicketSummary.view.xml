<mvc:View
	controllerName="focus.customersupportsystem.CustomerSupportSystem.controller.TicketSummary"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core" > 
	
<!-- We should use Smart form once we have metadata -->
	<Panel class="sapUxAPObjectPageSubSectionAlignContent" width="auto" visible="{= ${settingsModel>/editmode} !== true }">
		<form:SimpleForm
			editable="false"
			layout="ResponsiveGridLayout"
			labelSpanXL="4"
			labelSpanL="4"
			labelSpanM="12"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="0"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="2"
			columnsL="2"
			columnsM="2">
			<form:content>
				<core:Title text="Incident Details" />
				<Label text="Incident ID"/>
				<Text text="{ProductId}"/>
				<Label text="Description"/>
				<Text text="MTE - Upload error for evidence"/>
				<Label text="Status / Priority"/>
				<ObjectStatus text="In Process" state="Warning"/>
				<ObjectStatus text="High" state="Error"/>
				<Label text="Component"/>
				<Text text="SV-SMG-OST-FB-TWB"/>
				<Link text="Test Management"/>
				<Label text="Processor"/>
				<Text text="Walid Ghariani"/>
				<Text text="21.02.2020"/>
				<Label text="Processing"/>
				<Text text="DS Development"/>
				<Label text="Service Team"/>
				<Text text="DS Dev EMEA"/>
				<Label text="Owner"/>
				<Text text=""/>
				<Label text="Error Category"/>
				<Text text=""/>
				<Label text="Error Category"/>
				<Text text=""/>
				<Label text="Internal error"/>
				<Text text=""/>
				
				<core:Title text="Next Action Monitor (Product Support)" />
				<Label text="Report to the customer until"/>
				<Text text="19.02.2020"/>
				<Text text="17:43:52"/>
				<Label text="Manual date"/>
				<Text text="10:42"/>
				
				<core:Title text="Dates" />
				<Label text="Last Update"/>
				<Text text="21.02.2020"/>
				<Label text="IRT"/>
				<Text text="18.02.2020"/>
				<Label text="ORT"/>
				<Text text="Plan Sol. Del."/>
				<Label text="Created"/>
				<Text text="17.02.2020"/>
				<Label text="MPT"/>
				<Text text="29.02.2020"/>
				<Label text="Man."/>
				<Text text="" />
				<Label text="Time"/>
				<Text text=""/>
			</form:content>
		</form:SimpleForm>
	</Panel>
	
	<Panel class="sapUxAPObjectPageSubSectionAlignContent" width="auto" visible="{= ${settingsModel>/editmode} === true}">	
		<form:SimpleForm
			editable="true"
			layout="ResponsiveGridLayout">
			<form:content>
				<core:Title text="Incident Details" />
				<Label text="Incident ID"/>
				<Text text="{ProductId}"/>
				<Label text="Description"/>
				<Input value="MTE - Upload error for evidence"/>
				<Label text="Status / Priority"/>
				<ComboBox placeholder="Select status" selectedKey="0">
					<items>
						<core:Item text="In Process" key="0"/>
						<core:Item text="On Hold" key="1"/>
						<core:Item text="Customer Action" key="2"/>
						<core:Item text="Solution Provided" key="3"/>
						<core:Item text="Pending Development" key="4"/>
						<core:Item text="Pending Operations" key="5"/>
						<core:Item text="Pending Partner" key="6"/>
						<core:Item text="Pending Release" key="7"/>
					</items>
				</ComboBox>
				<ComboBox placeholder="Select status" selectedKey="0">
					<items>
						<core:Item text="Very high" key="0"/>
						<core:Item text="High" key="1"/>
						<core:Item text="Medium" key="2"/>
						<core:Item text="Low" key="3"/>
					</items>
				</ComboBox>
				<Label text="Component"/>
				<Text text="SV-SMG-OST-FB-TWB"/>
				<Link text="Test Management"/>
				<Label text="Processor"/>
				<Input
					type="Text"
					value="Walid Ghariani"
					showValueHelp="true"
					valueHelpOnly="true"
					valueHelpRequest="handleValueHelp"/>
				<Text text="21.02.2020"/>
				<Label text="Processing"/>
				<Text text="DS Development"/>
				<Label text="Service Team"/>
				<Text text="DS Dev EMEA"/>
				<Label text="Owner"/>
				<Text text=""/>
				<Label text="Error Category"/>
				<ComboBox id="comboboxErrorCategory1" items="{ path : 'errorsCategories>/errorsCategories1' }" selectionChange="errorCategory1Change">
					<core:Item text="{errorsCategories>errorText}" key="{errorsCategories>errorId}"/>
				</ComboBox>
				<Label text="Error Category"/>
				<ComboBox id="comboboxErrorCategory2" items="{ path : 'errorsCategories>/errorsCategories1' }">
					<core:Item id="itemErrorCategory2" text="{errorsCategories>errorText}" key="{errorsCategories>errorId}"/>
				</ComboBox>
				<Label text="Internal error"/>
				<ComboBox placeholder="Select status" selectedKey="0">
					<items>
						<core:Item text="Very high" key="0"/>
						<core:Item text="High" key="1"/>
						<core:Item text="Medium" key="2"/>
						<core:Item text="Low" key="3"/>
					</items>
				</ComboBox>
			</form:content>
		</form:SimpleForm>
	</Panel>
</mvc:View>