<mvc:View displayBlock="true" controllerName="focus.customersupportsystem.CustomerSupportSystem.controller.TicketDetail" height="100%"
		xmlns="sap.uxap"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:m="sap.m"
		xmlns:l="sap.ui.layout"
		xmlns:core="sap.ui.core">

	<ObjectPageLayout 
		id="ObjectPageLayout"
		showTitleInHeaderContent="true"
		alwaysShowContentHeader="true"
		headerContentPinnable="false"
		preserveHeaderStateOnScroll="true"
		useIconTabBar="true"
		upperCaseAnchorBar="false">
		
			<headerTitle>
				<ObjectPageDynamicHeaderTitle>
					<heading>
						<l:HorizontalLayout>
							<m:Title text="MTO - Update" class="sapUiTinyMargin"/>
							<m:GenericTag text="In Process" design="StatusIconHidden" status="Warning" class="sapUiTinyMargin"/>
							<m:GenericTag text="High" design="StatusIconHidden" status="Error" class="sapUiTinyMargin"/>
						</l:HorizontalLayout>
					</heading>
					
					<actions>
						<m:Button icon="sap-icon://edit" text="Edit" type="Default"></m:Button>
						<m:Button icon="sap-icon://save" text="Save" type="Accept"></m:Button>
						<m:Button icon="sap-icon://decline" text="Cancel" type="Reject"></m:Button>
					</actions>
					<navigationActions>
						<m:Button type="Transparent" icon="sap-icon://full-screen" press="handleFullScreen" visible="{= ${settingsModel>/actionButtonsInfo/midColumn/fullScreen} !== null }" />
						<m:Button type="Transparent" icon="sap-icon://exit-full-screen" press="handleExitFullScreen"  visible="{= ${settingsModel>/actionButtonsInfo/midColumn/exitFullScreen} !== null }"/>
						<m:Button type="Transparent" icon="sap-icon://decline" press="handleClose"  visible="{= ${settingsModel>/actionButtonsInfo/midColumn/closeColumn} !== null }"/>
					</navigationActions>
				</ObjectPageDynamicHeaderTitle>
			</headerTitle>
		
			<headerContent>
				<m:FlexBox wrap="Wrap" fitContainer="true" alignItems="Start">
					<m:VBox justifyContent="Center" class="sapUiMediumMarginBeginEnd">
						<m:Label text="{i18n>incidentIdLabel}"/>
						<m:Link text="{ProductId}" />
					</m:VBox>
					<m:VBox justifyContent="Center" class="sapUiMediumMarginBeginEnd">
						<m:Label text="{i18n>customerLabel}"/>
						<m:Link text="Evonik Industries AG" press="handleItemPress"/>
					</m:VBox>
					<m:VBox justifyContent="Center" class="sapUiMediumMarginBeginEnd">
						<m:Label text="{i18n>developerLabel}"/>
						<m:Link text="Walid Ghariani" press="handleItemPress"/>
					</m:VBox>
					<m:VBox justifyContent="Center" class="sapUiMediumMarginBeginEnd">
						<m:Label text="{i18n>systemIdLabel}"/>
						<m:Link text="D99" press="handleItemPress"/>
					</m:VBox>
				</m:FlexBox>
			</headerContent>
			
			
			<sections>
				
				<ObjectPageSection title="{i18n>tabBarLabelOverview}" titleUppercase="true" id="overview">
					<ObjectPageSubSection titleUppercase="true">
						<actions>
						
						</actions>
						<blocks>
							<mvc:XMLView viewName="focus.customersupportsystem.CustomerSupportSystem.view.TicketSummary" />
						</blocks>
					</ObjectPageSubSection>
				</ObjectPageSection>
				
				<ObjectPageSection title="{i18n>tabBarLabelCommunication}" titleUppercase="false">
					<ObjectPageSubSection titleUppercase="false">
						<actions>

						</actions>
						<blocks>
							<mvc:XMLView viewName="focus.customersupportsystem.CustomerSupportSystem.view.TicketCommunication" />
						</blocks>
					</ObjectPageSubSection>
				</ObjectPageSection>
				
				<ObjectPageSection title="{i18n>tabBarLabelAttachments}" titleUppercase="false">
					<ObjectPageSubSection titleUppercase="false">
						<actions>
						
						</actions>
						<blocks>
							<mvc:XMLView viewName="focus.customersupportsystem.CustomerSupportSystem.view.TicketAttachment" />
						</blocks>
					</ObjectPageSubSection>
				</ObjectPageSection>
				
				<ObjectPageSection title="{i18n>tabBarLabelSolution}" titleUppercase="false">
					<ObjectPageSubSection titleUppercase="false">
						<actions>

						</actions>
						<blocks>
							<mvc:XMLView viewName="focus.customersupportsystem.CustomerSupportSystem.view.TicketSolution" />
						</blocks>
					</ObjectPageSubSection>
				</ObjectPageSection>
				
				<ObjectPageSection title="{i18n>tabBarLabelLog}" titleUppercase="false">
					<ObjectPageSubSection titleUppercase="false">
						<actions>

						</actions>
						<blocks>
							<mvc:XMLView viewName="focus.customersupportsystem.CustomerSupportSystem.view.TicketLog" />
						</blocks>
					</ObjectPageSubSection>
				</ObjectPageSection>
			</sections>
		
		
	</ObjectPageLayout>
</mvc:View>