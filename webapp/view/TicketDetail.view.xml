<mvc:View displayBlock="true" controllerName="focus.customersupportsystem.CustomerSupportSystem.controller.TicketDetail" height="100%"
		xmlns="sap.uxap"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:m="sap.m"
		xmlns:f="sap.f"
		xmlns:form="sap.ui.layout.form"
		xmlns:smartform="sap.ui.comp.smartform"
		xmlns:core="sap.ui.core">

	<ObjectPageLayout 
		id="ObjectPageLayout"
		showTitleInHeaderContent="true"
		alwaysShowContentHeader="true"
		headerContentPinnable="false"
		preserveHeaderStateOnScroll="true"
		useIconTabBar="true">
		
			<headerTitle>
				<ObjectPageHeader
					isObjectIconAlwaysVisible="false"
					isObjectTitleAlwaysVisible="false"
					isActionAreaAlwaysVisible="true"
					objectImageURI="sap-icon://tags"
					objectTitle="{ProductId}">
					
					<actions>
						<m:Button type="Transparent" icon="sap-icon://full-screen" press="handleFullScreen"/>
						<m:Button type="Transparent" icon="sap-icon://exit-full-screen" press="handleExitFullScreen"/>
						<m:Button type="Transparent" icon="sap-icon://decline" press="handleClose"/>
					</actions>
				</ObjectPageHeader>
			</headerTitle>
		
			<headerContent>
				<m:FlexBox wrap="Wrap" fitContainer="true" alignItems="Start">
					<m:VBox justifyContent="Center" class="sapUiMediumMarginBeginEnd">
						<m:Label text="Customer"/>
						<m:Link text="Evonik Industries AG" press="handleItemPress"/>
					</m:VBox>
					<m:VBox justifyContent="Center" class="sapUiMediumMarginBeginEnd">
						<m:Label text="Developper"/>
						<m:Link text="Walid Ghariani" press="handleItemPress"/>
					</m:VBox>
					<m:VBox justifyContent="Center" class="sapUiMediumMarginBeginEnd">
						<m:Label text="System ID"/>
						<m:Link text="D99" press="handleItemPress"/>
					</m:VBox>
				</m:FlexBox>
			</headerContent>
			
			
			<sections>
				
				<ObjectPageSection title="Overview" titleUppercase="false">
					<ObjectPageSubSection>
						<actions>
							<m:Button type="Emphasized" icon="sap-icon://edit" press="toggleAreaPriority"/>
							<m:Button icon="sap-icon://display" press="toggleAreaPriority"/>
						</actions>
						<blocks>
							<mvc:XMLView viewName="focus.customersupportsystem.CustomerSupportSystem.view.TicketSummary" />
						</blocks>
					</ObjectPageSubSection>
				</ObjectPageSection>
				
				<ObjectPageSection title="Attachments" titleUppercase="false">
					<ObjectPageSubSection>
						<actions>
						
						</actions>
						<blocks>
							<mvc:XMLView viewName="focus.customersupportsystem.CustomerSupportSystem.view.TicketAttachment" />
						</blocks>
					</ObjectPageSubSection>
				</ObjectPageSection>
				
				<ObjectPageSection title="Solution" titleUppercase="false">
					<ObjectPageSubSection>
						<actions>

						</actions>
						<blocks>
							<mvc:XMLView viewName="focus.customersupportsystem.CustomerSupportSystem.view.TicketSolution" />
						</blocks>
					</ObjectPageSubSection>
				</ObjectPageSection>
				
				<ObjectPageSection title="Communication" titleUppercase="false">
					<ObjectPageSubSection>
						<actions>

						</actions>
						<blocks>
							<mvc:XMLView viewName="focus.customersupportsystem.CustomerSupportSystem.view.TicketCommunication" />
						</blocks>
					</ObjectPageSubSection>
				</ObjectPageSection>
				
				<ObjectPageSection title="Log" titleUppercase="false">
					<ObjectPageSubSection>
						<actions>

						</actions>
						<blocks>
							<mvc:XMLView viewName="focus.customersupportsystem.CustomerSupportSystem.view.TicketLog" />
						</blocks>
					</ObjectPageSubSection>
				</ObjectPageSection>
			</sections>
		
		
	</ObjectPageLayout>
</mvc:View>