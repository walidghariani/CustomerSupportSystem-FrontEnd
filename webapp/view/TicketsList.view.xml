<mvc:View
	controllerName="focus.customersupportsystem.CustomerSupportSystem.controller.TicketsList"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable"
	xmlns:t="sap.ui.table" >
	
	<f:DynamicPage id="dynamicPageId" toggleHeaderOnTitleClick="false" class="sapUiNoContentPadding" >
		
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="{i18n>ticketsListTitle}"/>
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>
	
		<f:content>
			<VBox>
				<smartFilterBar:SmartFilterBar
					id="smartFilterBar"
					entitySet="IncidentSet"
					basicSearchFieldName="IncidentId"
					enableBasicSearch="true"
					useToolbar="false"
					showFilterConfiguration="false">
					<smartFilterBar:controlConfiguration>
						<smartFilterBar:ControlConfiguration
							key="IncidentTypeId"
							visibleInAdvancedArea="true"
							preventInitialDataFetchInValueHelpDialog="false">
						</smartFilterBar:ControlConfiguration>
					</smartFilterBar:controlConfiguration>
				</smartFilterBar:SmartFilterBar>
				<smartTable:SmartTable
					id="smartTable_ResponsiveTable"
					smartFilterId="smartFilterBar"
					tableType="ResponsiveTable"
					editable="false"
					entitySet="IncidentSet"
					useTablePersonalisation="true"
					header="{i18n>ticketsListHeaderTable}"
					showRowCount="true"
					useExportToExcel="false"
					enableAutoBinding="false"
					demandPopin="true"
					initiallyVisibleFields="IncidentId,IncidentTypeId,Description,CustomerId,StatusId,ProcessorId,Component"
					requestAtLeastFields="IncidentId,IncidentTypeId,Description,CustomerId,StatusId,ProcessorId,PriorityId,Component">
						<t:Table id="productsTable" 
								enableSelectAll="false"
								alternateRowColors="true"
								fixedColumnCount="1"
								showNoData="false"
								selectionMode="Single" 
								selectionBehavior="RowOnly" 
								rowSelectionChange="onListRowSelect"
								width="100%">
							<t:rowSettingsTemplate>
								<t:RowSettings highlight="{path:'PriorityId', formatter:'.formatRowHighlight'}"></t:RowSettings>
							</t:rowSettingsTemplate>
						</t:Table>
				</smartTable:SmartTable>
			</VBox>
		</f:content>
		
	</f:DynamicPage>
	
</mvc:View>