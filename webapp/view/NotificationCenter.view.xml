<mvc:View
	controllerName="focus.customersupportsystem.CustomerSupportSystem.controller.NotificationCenter"
	xmlns="sap.m"
	xmlns:t="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc"
	height="100%" > 
	
	<List id="notificationsList" items="{path : '/notifications' }">
		
		<NotificationListItem	title="{title}"
								authorName="{authorName}"
								showButtons="false"
								showCloseButton="false"
								unread="{unread}"
								description="{description}"
								datetime="{datetime}"
								highlight="{highlight}"
								priority="{priority}" >
		</NotificationListItem>
	</List>
	
</mvc:View>